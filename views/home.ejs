<% layout('boilerplate') %>
<link rel="stylesheet" href="/css/home.css">

<div id="page-content-wrapper">
    <div class="home-wrapper">
        <div class="headline row">
            <div class="col-lg-6">
                <h1 class="">Paperboy Headlines</h1>
            </div>
            <div class="col-lg-4">
                <form class="d-flex" action="/search" method='GET'>
                    <input class="form-control me-2" name="q" type="search" placeholder="Search all news" aria-label="Search" required>
                    <button class="search-btn" style="margin-top: 0;" type="submit">Search</button>
                </form>
            </div>
        </div>
        <div class="home-container">
            <div class="hdivider hidden"></div>
            <% let days = ['Sunday', 'Monday', 'Tuesday', 'Wednesday', 'Thursday', 'Friday', 'Saturday'];  %>
            <div class="home-col slide-in">
                <div>
                    <h1 class="smaller"><%= news[1].Article.Title %></h1>
                    <% let date1 = new Date( Date.parse(news[1].Info.Date)); %> 
                    <div class="date-row" >
                        <p class="bold"><%= days[date1.getDay()] + date1.toGMTString().slice(3, 16)%></p>
                        <a class="tag" href="/<%=news[1].Info.SectionId%>"><%=news[1].Info.SectionId%></a>
                    </div>
                    <p><%= news[1].Article.TrailText %></p>
                    <a class="btn btn-0" href="/<%=news[1].Info.SectionId%>/<%=news[1].ObjectId%>">Start reading</a>
                </div>
                <div class="hdivider"></div>
                <div>
                    <h1 class="smaller" ><%= news[2].Article.Title %></h1>
