                    <a class="btn btn-0" href="/<%=news[2].Info.SectionId%>/<%=news[2].ObjectId%>">Start reading</a>
                </div>
            </div>
            <div class="hdivider hidden"></div>
            <div class="divider"></div>
            <div class="home-col slide-in">
                <% if(news[0].Image.ImageFileURL.length) {%>
                    <img style="height: 22rem;" class="news-img" src="<%=news[0].Image.ImageFileURL%>" alt="<%=news[0].Image.Caption%>">
                    <br>
                    <br>
                <% } %> 
                <% let date0 = new Date( Date.parse(news[0].Info.Date)); %> 
